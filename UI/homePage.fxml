            <Font name="Algerian" size="20.0" />
         </font></Button>
      <Button fx:id="sellid" layoutX="297.0" layoutY="433.0" mnemonicParsing="false" onAction="#transferClick" prefHeight="43.0" prefWidth="206.0" stylesheets="@Style.css" text="Transfer Movie">
         <font>
            <Font name="Algerian" size="20.0" />
         </font></Button>
      <ImageView fitHeight="115.0" fitWidth="115.0" layoutX="45.0" layoutY="45.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@searchpage.jpg" />
         </image>
      </ImageView>
      <Button fx:id="exitid1" layoutX="583.0" layoutY="510.0" mnemonicParsing="false" onAction="#logOutClick" prefHeight="37.0" prefWidth="126.0" stylesheets="@Style.css" text="Log Out">
         <font>
            <Font name="Algerian" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
