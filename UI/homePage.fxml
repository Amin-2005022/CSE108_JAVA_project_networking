            <Font name="Algerian" size="20.0" />
         </font></Button>
      <Button fx:id="addid" layoutX="296.0" layoutY="372.0" mnemonicParsing="false" onAction="#addClick" prefHeight="43.0" prefWidth="206.0" stylesheets="@Style.css" text="Add Movie">
