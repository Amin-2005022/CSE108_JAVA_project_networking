            <Font name="Algerian" size="36.0" />
         </font>
      </Label>
      <Button layoutX="433.0" layoutY="458.0" mnemonicParsing="false" onAction="#createClick" prefHeight="43.0" prefWidth="200.0" style="-fx-background-color: #000000;" stylesheets="@Style.css" text="Create Account" textFill="WHITE">
         <font>
            <Font name="Algerian" size="20.0" />
         </font>
      </Button>
      <Button layoutX="215.0" layoutY="458.0" mnemonicParsing="false" onAction="#resetClick" prefHeight="43.0" prefWidth="200.0" style="-fx-background-color: #000000;" stylesheets="@Style.css" text="Reset Password" textFill="WHITE">
         <font>
            <Font name="Algerian" size="20.0" />
         </font>
      </Button>
      <Button fx:id="loginButton1" layoutX="646.0" layoutY="517.0" mnemonicParsing="false" onAction="#exitClick" prefHeight="43.0" prefWidth="82.0" style="-fx-background-color: #000000;" stylesheets="@Style.css" text="Exit" textFill="WHITE">
         <font>
            <Font name="Algerian" size="20.0" />
         </font>
      </Button>
    </children>
