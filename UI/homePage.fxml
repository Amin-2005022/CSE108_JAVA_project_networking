<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="movie.mainproject.HomePage">
   <children>
      <Label fx:id="label1" alignment="CENTER" layoutX="145.0" layoutY="34.0" prefHeight="18.0" prefWidth="510.0" text="Label" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Algerian" size="42.0" />
         </font>
         <effect>
            <Reflection bottomOpacity="0.1" fraction="0.85" topOpacity="0.34">
               <input>
                  <DropShadow>
                     <input>
                        <Bloom />
                     </input>
                  </DropShadow>
               </input>
            </Reflection>
         </effect>
      </Label>
      <Label fx:id="label2" layoutX="89.0" layoutY="176.0" prefHeight="26.0" prefWidth="416.0" text="Label" textFill="WHITE">
         <font>
            <Font name="Algerian" size="28.0" />
         </font>
      </Label>
      <Label fx:id="label3" layoutX="89.0" layoutY="234.0" prefHeight="40.0" prefWidth="594.0" text="Label" textFill="WHITE">
         <font>
            <Font name="Algerian" size="28.0" />
         </font>
      </Label>
      <Button fx:id="searchid" layoutX="297.0" layoutY="310.0" mnemonicParsing="false" onAction="#searchClick" prefHeight="43.0" prefWidth="206.0" stylesheets="@Style.css" text="Search Movie">
