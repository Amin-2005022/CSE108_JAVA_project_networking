            <Font name="Algerian" size="36.0" />
         </font></Label>
        <TextField fx:id="userText" layoutX="287.0" layoutY="205.0" prefHeight="26.0" prefWidth="442.0" promptText="Enter User Name">
         <font>
            <Font size="26.0" />
         </font></TextField>
        <PasswordField fx:id="passwordText" layoutX="287.0" layoutY="299.0" prefHeight="56.0" prefWidth="442.0" promptText="Enter Password">
         <font>
            <Font size="26.0" />
         </font></PasswordField>
          <Button fx:id="loginButton" layoutX="646.0" layoutY="458.0" mnemonicParsing="false" onAction="#loginAction" prefHeight="43.0" prefWidth="82.0" style="-fx-background-color: #000000;" stylesheets="@Style.css" text="Login" textFill="WHITE">
         <font>
            <Font name="Algerian" size="20.0" />
         </font>
      </Button>
      <Label alignment="CENTER" layoutX="68.0" layoutY="300.0" prefHeight="46.0" prefWidth="210.0" style="-fx-background-color: #000000;" text="Password :" textFill="WHITE">
